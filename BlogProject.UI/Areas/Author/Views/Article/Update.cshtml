
@{
    ViewBag.Title = "Update";
    Layout = "~/Areas/Author/Views/Shared/AuthorLayoutPage.cshtml";
}

@model BlogProject.UI.Areas.Author.Models.VM.UpdateArticleVM


<section class="content-header">
    <ol class="breadcrumb">
        <li><a href="/Author/Home/Index"><i class="fa fa-home"></i> Home</a></li>
        <li><a href="/Author/Article/Add">Add Article</a></li>
        <li><a href="/Author/Article/List">Article List</a></li>
        <li class="active">Article List</li>
    </ol>
</section>
<br />
<section class="content">
    <div class="row">
        <div class="col-md-6">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Update Articles</h3>
                </div>
                <form action="/Author/Article/Update" method="post" enctype="multipart/form-data" role="form">
                    <div class="box-body">
                        <div class="form-group">
                            <label for="text">Header</label>
                            <input type="text" name="Header" value="@Model.Article.Header" class="form-control" placeholder="Header">
                        </div>
                        <div class="form-group">
                            <label for="text">Content</label>
                            <input type="text" name="Content" value="@Model.Article.Content" class="form-control" placeholder="Content">
                        </div>
                        <div class="form-group">
                            <label for="text">Publish Date</label>
                            <input type="text" name="PublishDate" value="@Model.Article.PublishDate" class="form-control" placeholder="Publish Date">
                        </div>
                        <div class="form-group">
                            <label for="CategoryID">Choose Category</label>
                            <select name="CategoryID" class="form-control">
                                @foreach (var item in Model.Categories)
                                {
                                    <option value="@item.ID">@item.CategoryName</option>
                                }
                            </select>
                        </div>
                        <input type="text" style="visibility:hidden" name="ID" value="@Model.Article.ID" />
                        <div class="box-footer">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>


